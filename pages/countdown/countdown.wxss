/**countdown.wxss**/
page {
  height: 100vh;
}

.page-container {
  position: relative;
  height: 100vh;
  width: 100%;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container {
  min-height: 100vh;
  padding: 0 20rpx 140rpx 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.back-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.nav-placeholder {
  width: 60rpx;
}

/* 主要内容区域 */
.content {
  padding-top: 128rpx;
}

/* 在一起天数卡片 */
.love-days-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.love-days-left {
  display: flex;
  flex-direction: column;
}

.love-days-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.start-date {
  font-size: 24rpx;
  color: #999;
}

.love-days-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.love-days-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.days-unit {
  background: #ff6b35;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 倒数日事件列表 */
.countdown-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.countdown-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.countdown-left {
  display: flex;
  align-items: center;
}

.event-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.countdown-right {
  display: flex;
  align-items: center;
}

.countdown-days {
  background: #007aff;
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 底部添加按钮 */
.bottom-button {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.add-icon {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.add-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
