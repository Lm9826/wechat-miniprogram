/* discover.wxss */
.discover-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.feature-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.feature-item:active {
  transform: scale(0.95);
}

.feature-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.feature-content {
  color: #fff;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.feature-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.tips {
  text-align: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}

.tips-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}
